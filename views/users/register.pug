extends ../_master

block scripts

block head
   title Register
block body
    h1 Register
    div.jumbotron.col-lg-10
        form.form-horizontal(action="/register", method="POST")
            fieldset
                section.form-group
                    label.col-lg-2.control-label(for='inputUsername') Username
                    div.col-lg-10
                        input#inputUsername.form-control(placeholder='Username', name='suername', autocomplete='off', type='text', required)
                section.form-group
                    label.col-lg-2.control-label(for='inputEmail') Email
                    div.col-lg-10
                        input#inputEmail.form-control(placeholder='Email', name='email', autocomplete='off', type='text', required)
                section.form-group
                    label.col-lg-2.control-label(for='inputPassword') Password
                    div.col-lg-10
                        input#inputPassword.form-control(placeholder='Password', name='password', autocomplete='off', type='password', required)
                section.form-group
                    label.col-lg-2.control-label(for='inputEmail') Phone
                    div.col-lg-10
                        input#inputEmail.form-control(placeholder='Phone number', name='phone', autocomplete='off', type='tel', required)
                section.form-group
                    label.col-lg-2.control-label(for='inputAddress') Address
                    div.col-lg-10
                        input#inputAddress.form-control(placeholder="Address" name="address" autocomplete="off" type="address")
                        span.help-block
                            | We need your addres in case of home visits.
                section.form-group
                    label.col-lg-2.control-label Gender
                    div.col-lg-10
                        div.radio
                            label
                                input#optionsRadios1(name='gender', value='male', checked='', type='radio')
                                | Male
                        div.radio
                            label
                                input#optionsRadios2(name='gender', value='female', type='radio')
                                | Female
                section.form-group
                    label.col-lg-2.control-label(for='select') Pets
                    div.col-lg-10
                        select#select.form-control
                            option 1
                            option 2
                            option 3
                            option 4
                            option 5
                        //- br
                        //- select.form-control(multiple='')
                        //-     option 1
                        //-     option 2
                        //-     option 3
                        //-     option 4
                        //-     option 5
                        div.checkbox
                            label
                                input(type='checkbox', name="acceptPolicy", required)
                                |  I have read and accept the 
                                span
                                    a#policy-link(href="#modal") privacy policy
                section.form-group
                    div.col-lg-10.col-lg-offset-2
                        button.btn.btn-default(type='reset') Cancel
                        button.btn.btn-primary(type='submit') Submit

